# Production Environment Variables
# Copy this file to .env.production and fill in your values

# =====================
# Backend Configuration
# =====================

# MongoDB Connection String
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/instabrief
# For local: mongodb://admin:password@mongo:27017/instabrief
MONGODB_URI=mongodb://admin:changeme@mongo:27017/instabrief

# MongoDB Credentials (if using local MongoDB)
MONGO_USERNAME=admin
MONGO_PASSWORD=changeme

# Secret Key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-min-32-characters-long

# Environment
ENVIRONMENT=production

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =====================
# Frontend Configuration
# =====================

# Backend API URL (without trailing slash)
VITE_API_URL=https://api.yourdomain.com

# =====================
# Optional: External APIs
# =====================

# Google Translate API (if using instead of LibreTranslate)
GOOGLE_TRANSLATE_API_KEY=your-google-api-key

# OpenAI API (if using GPT models)
OPENAI_API_KEY=your-openai-api-key

# =====================
# Optional: Monitoring
# =====================

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics ID
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =====================
# Optional: Email
# =====================

# SMTP Configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# =====================
# Optional: Storage
# =====================

# AWS S3 for file storage (alternative to MongoDB GridFS)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=instabrief-uploads
AWS_REGION=us-east-1

# =====================
# Optional: Rate Limiting
# =====================

# Redis for rate limiting and caching
REDIS_URL=redis://localhost:6379/0
RATE_LIMIT_PER_MINUTE=60
